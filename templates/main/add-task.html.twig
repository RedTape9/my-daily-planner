{% extends "base.html.twig" %}

{% block body %}
<div class="mt-5">
{{form_start(form)}}
<div class="form-group">
    {{form_label(form.task)}}
    {{form_widget(form.task)}}
</div>
<div class="form-group">
    {{form_label(form.description)}}
    {{form_widget(form.description)}}
</div>
<button type="submit" class="btn btn-primary btn-sm mt-2">
{{form.vars.data.id is null ? 'Add Task' : 'Edit Task'}}
</button>

<a href="{{ path('app_main') }}" class="btn btn-danger btn-sm mt-2">
    {{form.vars.data.id is null ? 'Cancel' : 'Back'}}
</a>
{{form_end(form)}}
{% endblock %}

